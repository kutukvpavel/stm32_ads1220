<Window x:Class="AdcControl.ViewSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdcControl"
        xmlns:resx="clr-namespace:AdcControl.Resources"
        xmlns:settings="clr-namespace:AdcControl.Properties"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="{x:Static resx:Default.strViewConfig}"
        Height="auto" Width="auto"
        MaxHeight="600" MaxWidth="500"
        MinWidth="400" MinHeight="300"
        FontSize="14"
        ResizeMode="CanResizeWithGrip">
    <toolkit:PropertyGrid SelectedObject="{x:Static settings:Settings.ViewSettings}"
                          NameColumnWidth="200" ShowTitle="False">
    </toolkit:PropertyGrid>
</Window>
